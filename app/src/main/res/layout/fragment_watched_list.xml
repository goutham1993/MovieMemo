<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ui.watched.WatchedListFragment">

    <include
        android:id="@+id/layout_search"
        layout="@layout/layout_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Quick Filters and Sort -->
    <LinearLayout
        android:id="@+id/layout_filters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_search">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_filter_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:minHeight="40dp"
            android:minWidth="0dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/button_filter_selector"
            android:text="All"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_filter_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:minHeight="40dp"
            android:minWidth="0dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/button_filter_selector"
            android:text="ðŸ  Home"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_filter_theater"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:minHeight="40dp"
            android:minWidth="0dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/button_filter_selector"
            android:text="ðŸŽ¬ Theater"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface" />

        <!-- Sort Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_filter_selector"
            android:text=""
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_sort"
            app:iconSize="20dp"
            app:iconTint="?attr/colorOnSurface" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_watched"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="true"
        android:paddingTop="8dp"
        android:paddingBottom="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_filters"
        tools:listitem="@layout/item_watched_entry" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_empty_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¬ No movies watched yet.\nTap the + button to add your first movie!"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
