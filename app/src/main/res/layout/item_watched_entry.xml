<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/text_movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            app:layout_constraintEnd_toStartOf="@+id/text_rating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="The Dark Knight" />

        <TextView
            android:id="@+id/text_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rating"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:textSize="14sp"
            android:textStyle="bold"
            android:letterSpacing="0.01"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="9/10" />

        <LinearLayout
            android:id="@+id/layout_duration_spend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_rating">

            <TextView
                android:id="@+id/text_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="â±ï¸ 152 min"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/text_spend_under_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="?attr/colorOnSurface"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="$15.50"
                tools:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_watched_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@+id/layout_duration_spend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_movie_title"
            tools:text="Watched on Dec 15, 2024" />

        <TextView
            android:id="@+id/text_companions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/layout_duration_spend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_watched_date"
            tools:text="ðŸ‘¥ with Alice, Bob, and Sarah"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_language"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/layout_duration_spend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_companions"
            tools:text="ðŸŒ English"
            tools:visibility="visible" />


        <LinearLayout
            android:id="@+id/layout_metadata"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_language">

            <TextView
                android:id="@+id/text_spend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"
                tools:text="$15.50" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_theater_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="8dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/layout_duration_spend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_language"
            tools:text="ðŸ“ at Cinemark, Dallas"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_streaming_platform"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="8dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/layout_duration_spend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_language"
            tools:text="ðŸ“º Watched on Prime Video"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_before_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="text_theater_info,text_streaming_platform" />

        <TextView
            android:id="@+id/text_notes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrier_before_notes"
            tools:text="Great movie with amazing action sequences!"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_before_chips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="text_theater_info,text_streaming_platform,text_notes" />

        <LinearLayout
            android:id="@+id/layout_chips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:baselineAligned="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrier_before_chips">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_genre"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:maxWidth="120dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12sp"
                android:clickable="false"
                android:focusable="false"
                android:visibility="gone"
                app:chipCornerRadius="12dp"
                tools:text="Action"
                tools:visibility="visible" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_location"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:maxWidth="120dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12sp"
                android:clickable="false"
                android:focusable="false"
                android:visibility="gone"
                app:chipCornerRadius="12dp"
                tools:text="ðŸ  Home"
                tools:visibility="visible" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_time"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="120dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12sp"
                android:clickable="false"
                android:focusable="false"
                android:visibility="gone"
                app:chipCornerRadius="12dp"
                tools:text="Night"
                tools:visibility="visible" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
