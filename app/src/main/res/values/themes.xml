<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieMemo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Brand Color -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorOnPrimary">@color/light_on_primary</item>
        <item name="colorPrimaryContainer">@color/light_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/light_on_primary_container</item>
        
        <!-- Secondary Brand Color -->
        <item name="colorSecondary">@color/light_secondary</item>
        <item name="colorOnSecondary">@color/light_on_secondary</item>
        <item name="colorSecondaryContainer">@color/light_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/light_on_secondary_container</item>
        
        <!-- Tertiary Color -->
        <item name="colorTertiary">@color/light_tertiary</item>
        <item name="colorOnTertiary">@color/light_on_tertiary</item>
        <item name="colorTertiaryContainer">@color/light_tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/light_on_tertiary_container</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/light_error</item>
        <item name="colorOnError">@color/light_on_error</item>
        <item name="colorErrorContainer">@color/light_error_container</item>
        <item name="colorOnErrorContainer">@color/light_on_error_container</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorOnBackground">@color/light_on_background</item>
        
        <!-- Surface Colors -->
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnSurface">@color/light_on_surface</item>
        <item name="colorSurfaceVariant">@color/light_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/light_on_surface_variant</item>
        
        <!-- Outline Colors -->
        <item name="colorOutline">@color/light_outline</item>
        <item name="colorOutlineVariant">@color/light_outline_variant</item>
        
        <!-- Inverse Colors -->
        <item name="colorSurfaceInverse">@color/light_inverse_surface</item>
        <item name="colorOnSurfaceInverse">@color/light_inverse_on_surface</item>
        <item name="colorPrimaryInverse">@color/light_inverse_primary</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/light_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Toolbar Theming -->
        <item name="android:textColorPrimary">@color/light_on_primary</item>
        <item name="android:textColorSecondary">@color/light_on_primary</item>
        <item name="colorControlNormal">@color/light_on_primary</item>
        <item name="colorControlActivated">@color/light_on_primary</item>
        <item name="colorControlHighlight">@color/light_on_primary</item>
        
        <!-- Popup Menu Theming -->
        <item name="android:popupMenuStyle">@style/PopupMenu.MovieMemo</item>
        <item name="android:actionOverflowMenuStyle">@style/PopupMenu.MovieMemo</item>
        
        <!-- FAB Theming -->
        <item name="colorSecondary">@color/light_primary</item>
        <item name="colorOnSecondary">@color/light_on_primary</item>
    </style>

    <style name="Theme.MovieMemo" parent="Base.Theme.MovieMemo" />
    
    <!-- Custom Rounded TextInputLayout Style -->
    <style name="Widget.Material3.TextInputLayout.OutlinedBox.Rounded" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>
    
    <!-- Highlighted TextInputLayout Style for Key Fields -->
    <style name="Widget.Material3.TextInputLayout.OutlinedBox.Rounded.Highlighted" parent="Widget.Material3.TextInputLayout.OutlinedBox.Rounded">
        <item name="boxStrokeColor">@color/text_input_highlighted_border</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2.5dp</item>
    </style>
    
    <!-- Custom Popup Menu Style -->
    <style name="PopupMenu.MovieMemo" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@color/light_popup_background</item>
        <item name="android:textColor">@color/light_popup_text</item>
        <item name="android:itemTextAppearance">@style/PopupMenuText.MovieMemo</item>
    </style>
    
    <!-- Popup Menu Text Style -->
    <style name="PopupMenuText.MovieMemo" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/light_popup_text</item>
    </style>
    
    <!-- Dark Theme Popup Menu Style -->
    <style name="PopupMenu.MovieMemo.Dark" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@color/dark_popup_background</item>
        <item name="android:textColor">@color/dark_popup_text</item>
        <item name="android:itemTextAppearance">@style/PopupMenuText.MovieMemo.Dark</item>
    </style>
    
    <!-- Dark Theme Popup Menu Text Style -->
    <style name="PopupMenuText.MovieMemo.Dark" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/dark_popup_text</item>
    </style>
    
    <!-- Custom FAB Style for Light Theme -->
    <style name="Widget.Material3.FloatingActionButton.Orange" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/light_primary</item>
        <item name="tint">@color/light_on_primary</item>
    </style>
    
    <!-- DatePickerDialog Style - Adapts to Light/Dark Theme -->
    <style name="DatePickerDialog.MovieMemo" parent="android:Theme.Material.Dialog">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorOnPrimary">?attr/colorOnPrimary</item>
        <item name="colorSurface">?attr/colorSurface</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
        <item name="colorOnSurfaceVariant">?attr/colorOnSurfaceVariant</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColorSecondary">?attr/colorOnSurfaceVariant</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
    </style>
    
    <!-- Dark Theme Override -->
    <style name="Theme.MovieMemo.Dark" parent="Theme.MovieMemo">
        <!-- Primary Brand Color -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorOnPrimary">@color/dark_on_primary</item>
        <item name="colorPrimaryContainer">@color/dark_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/dark_on_primary_container</item>
        
        <!-- Secondary Brand Color -->
        <item name="colorSecondary">@color/dark_secondary</item>
        <item name="colorOnSecondary">@color/dark_on_secondary</item>
        <item name="colorSecondaryContainer">@color/dark_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/dark_on_secondary_container</item>
        
        <!-- Tertiary Color -->
        <item name="colorTertiary">@color/dark_tertiary</item>
        <item name="colorOnTertiary">@color/dark_on_tertiary</item>
        <item name="colorTertiaryContainer">@color/dark_tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/dark_on_tertiary_container</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/dark_error</item>
        <item name="colorOnError">@color/dark_on_error</item>
        <item name="colorErrorContainer">@color/dark_error_container</item>
        <item name="colorOnErrorContainer">@color/dark_on_error_container</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorOnBackground">@color/dark_on_background</item>
        
        <!-- Surface Colors -->
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_on_surface</item>
        <item name="colorSurfaceVariant">@color/dark_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/dark_on_surface_variant</item>
        
        <!-- Outline Colors -->
        <item name="colorOutline">@color/dark_outline</item>
        <item name="colorOutlineVariant">@color/dark_outline_variant</item>
        
        <!-- Inverse Colors -->
        <item name="colorSurfaceInverse">@color/dark_inverse_surface</item>
        <item name="colorOnSurfaceInverse">@color/dark_inverse_on_surface</item>
        <item name="colorPrimaryInverse">@color/dark_inverse_primary</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/dark_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Toolbar Theming -->
        <item name="android:textColorPrimary">@color/dark_on_primary</item>
        <item name="android:textColorSecondary">@color/dark_on_primary</item>
        <item name="colorControlNormal">@color/dark_on_primary</item>
        <item name="colorControlActivated">@color/dark_on_primary</item>
        <item name="colorControlHighlight">@color/dark_on_primary</item>
        
        <!-- Popup Menu Theming -->
        <item name="android:popupMenuStyle">@style/PopupMenu.MovieMemo.Dark</item>
        <item name="android:actionOverflowMenuStyle">@style/PopupMenu.MovieMemo.Dark</item>
    </style>
    
</resources>